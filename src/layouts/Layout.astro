---
interface Props {
  title: string;
  description?: string;
}

const { title, description = "FishLog - Your AI-powered fishing companion. Log catches, identify species instantly, track measurements, and discover insights to become a better angler." } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />

    <!-- Primary Meta Tags -->
    <title>{title}</title>
    <meta name="title" content={title} />
    <meta name="description" content={description} />
    <meta name="keywords" content="fishing app, fish identification, fishing log, catch tracker, AI fish ID, fishing journal, angler app, species identification, fishing statistics, tackle box" />
    <meta name="author" content="FishLog" />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://fishlog.app/" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content="https://fishlog.app/images/og-image.png" />
    <meta property="og:site_name" content="FishLog" />

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content="https://fishlog.app/" />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={description} />
    <meta property="twitter:image" content="https://fishlog.app/images/og-image.png" />

    <!-- Favicon -->
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />
    <link rel="manifest" href="/site.webmanifest" />
    <meta name="theme-color" content="#0066CC" />

    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap" rel="stylesheet" />

    <!-- Canonical -->
    <link rel="canonical" href="https://fishlog.app/" />

    <!-- App Store Smart Banner -->
    <meta name="apple-itunes-app" content="app-id=XXXXXXXXXX" />
  </head>
  <body class="bg-white text-gray-900 font-sans">
    <slot />

    <!-- Structured Data -->
    <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "MobileApplication",
        "name": "FishLog",
        "operatingSystem": "iOS",
        "applicationCategory": "SportsApplication",
        "offers": {
          "@type": "Offer",
          "price": "0",
          "priceCurrency": "USD"
        },
        "description": "AI-powered fishing companion app for logging catches, identifying species, and tracking fishing insights.",
        "featureList": [
          "AI species identification (130+ species)",
          "Photo-based length measurement",
          "Weight estimation from length-weight curves",
          "GPS location tracking",
          "Weather data capture",
          "Lure and tackle tracking",
          "Trip organization",
          "Personal analytics"
        ]
      }
    </script>
  </body>
</html>
