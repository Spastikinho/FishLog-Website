<header class="fixed top-0 left-0 right-0 z-50 bg-white/80 backdrop-blur-lg border-b border-gray-100">
  <nav class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex items-center justify-between h-16">
      <!-- Logo -->
      <a href="/" class="flex items-center gap-3">
        <div class="w-10 h-10 rounded-xl bg-gradient-to-br from-fresh-teal to-deep-navy flex items-center justify-center">
          <svg class="w-6 h-6 text-white" fill="currentColor" viewBox="0 0 24 24">
            <path d="M12 2C7.5 2 3.5 5 2 9c1.5 4 5.5 7 10 7s8.5-3 10-7c-1.5-4-5.5-7-10-7zm0 12c-2.5 0-4.5-2-4.5-4.5S9.5 5 12 5s4.5 2 4.5 4.5S14.5 14 12 14z" />
          </svg>
        </div>
        <span class="text-xl font-bold text-deep-navy">Thalweg</span>
      </a>

      <!-- Navigation Links -->
      <div class="hidden md:flex items-center gap-8">
        <a href="#features" class="text-gray-600 hover:text-ocean-blue transition-colors">Features</a>
        <a href="#how-it-works" class="text-gray-600 hover:text-ocean-blue transition-colors">How it Works</a>
        <a href="#capabilities" class="text-gray-600 hover:text-ocean-blue transition-colors">Technology</a>
        <a href="#pricing" class="text-gray-600 hover:text-ocean-blue transition-colors">Pricing</a>
      </div>

      <!-- CTA Button -->
      <a
        href="#download"
        class="hidden sm:inline-flex items-center gap-2 px-5 py-2.5 bg-gradient-to-r from-ocean-blue to-deep-navy text-white font-semibold rounded-xl hover:shadow-lg transition-all duration-300"
      >
        <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
          <path d="M18.71 19.5c-.83 1.24-1.71 2.45-3.05 2.47-1.34.03-1.77-.79-3.29-.79-1.53 0-2 .77-3.27.82-1.31.05-2.3-1.32-3.14-2.53C4.25 17 2.94 12.45 4.7 9.39c.87-1.52 2.43-2.48 4.12-2.51 1.28-.02 2.5.87 3.29.87.78 0 2.26-1.07 3.81-.91.65.03 2.47.26 3.64 1.98-.09.06-2.17 1.28-2.15 3.81.03 3.02 2.65 4.03 2.68 4.04-.03.07-.42 1.44-1.38 2.83M13 3.5c.73-.83 1.94-1.46 2.94-1.5.13 1.17-.34 2.35-1.04 3.19-.69.85-1.83 1.51-2.95 1.42-.15-1.15.41-2.35 1.05-3.11z"/>
        </svg>
        Download Free
      </a>

      <!-- Mobile Menu Button -->
      <button id="mobile-menu-btn" class="md:hidden p-2 text-gray-600">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
        </svg>
      </button>
    </div>
  </nav>

  <!-- Mobile Menu -->
  <div id="mobile-menu" class="hidden md:hidden bg-white border-t border-gray-100">
    <div class="px-4 py-4 space-y-4">
      <a href="#features" class="block text-gray-600 hover:text-ocean-blue transition-colors">Features</a>
      <a href="#how-it-works" class="block text-gray-600 hover:text-ocean-blue transition-colors">How it Works</a>
      <a href="#capabilities" class="block text-gray-600 hover:text-ocean-blue transition-colors">Technology</a>
      <a href="#pricing" class="block text-gray-600 hover:text-ocean-blue transition-colors">Pricing</a>
      <a
        href="#download"
        class="block w-full text-center px-5 py-3 bg-gradient-to-r from-ocean-blue to-deep-navy text-white font-semibold rounded-xl"
      >
        Download Free
      </a>
    </div>
  </div>
</header>

<script>
  const menuBtn = document.getElementById('mobile-menu-btn');
  const mobileMenu = document.getElementById('mobile-menu');

  menuBtn?.addEventListener('click', () => {
    mobileMenu?.classList.toggle('hidden');
  });
</script>
