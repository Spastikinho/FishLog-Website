---
const plans = [
  {
    name: "Free",
    price: "$0",
    period: "forever",
    description: "Perfect for casual anglers getting started",
    features: [
      "Unlimited catch logging",
      "AI species identification (5/month)",
      "GPS location tracking",
      "Weather data capture",
      "Basic statistics",
      "Photo storage (100 catches)"
    ],
    cta: "Get Started Free",
    popular: false,
    gradient: "from-gray-500 to-gray-600"
  },
  {
    name: "Pro",
    price: "$4.99",
    period: "month",
    description: "For dedicated anglers who want the full experience",
    features: [
      "Everything in Free, plus:",
      "Unlimited AI species ID",
      "Length & weight measurement",
      "Lure & tackle tracking",
      "Advanced analytics dashboard",
      "Unlimited photo storage",
      "Trip planning tools",
      "Export data (CSV/PDF)",
      "Priority support"
    ],
    cta: "Start Pro Trial",
    popular: true,
    gradient: "from-ocean-blue to-deep-navy"
  },
  {
    name: "Pro Annual",
    price: "$39.99",
    period: "year",
    description: "Best value - save 33% with annual billing",
    features: [
      "All Pro features",
      "2 months free",
      "Early access to new features",
      "Exclusive pro badges",
      "Cloud backup & sync"
    ],
    cta: "Save with Annual",
    popular: false,
    gradient: "from-golden-yellow to-sunset-orange"
  }
];
---

<section id="pricing" class="py-24 bg-white">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Section Header -->
    <div class="text-center mb-16">
      <span class="inline-block px-4 py-2 bg-golden-yellow/10 text-golden-yellow font-semibold rounded-full text-sm mb-4">
        Simple Pricing
      </span>
      <h2 class="text-4xl sm:text-5xl font-bold text-gray-900 mb-4">
        Choose Your <span class="gradient-text">Plan</span>
      </h2>
      <p class="text-xl text-gray-600 max-w-2xl mx-auto">
        Start free and upgrade when you're ready. No hidden fees, cancel anytime.
      </p>
    </div>

    <!-- Pricing Cards -->
    <div class="grid md:grid-cols-3 gap-8 max-w-5xl mx-auto">
      {plans.map((plan) => (
        <div class={`relative bg-white rounded-3xl p-8 ${plan.popular ? 'ring-2 ring-ocean-blue shadow-2xl scale-105' : 'shadow-lg'} transition-all duration-300 hover:shadow-xl`}>
          {plan.popular && (
            <div class="absolute -top-4 left-1/2 -translate-x-1/2">
              <span class="bg-gradient-to-r from-ocean-blue to-deep-navy text-white text-sm font-semibold px-4 py-1 rounded-full">
                Most Popular
              </span>
            </div>
          )}

          <!-- Plan Header -->
          <div class="text-center mb-8">
            <h3 class="text-2xl font-bold text-gray-900 mb-2">{plan.name}</h3>
            <div class="flex items-baseline justify-center gap-1">
              <span class="text-4xl font-extrabold text-gray-900">{plan.price}</span>
              <span class="text-gray-500">/{plan.period}</span>
            </div>
            <p class="text-gray-600 mt-2">{plan.description}</p>
          </div>

          <!-- Features -->
          <ul class="space-y-4 mb-8">
            {plan.features.map((feature) => (
              <li class="flex items-start gap-3">
                <svg class="w-5 h-5 text-forest-green flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
                <span class="text-gray-700">{feature}</span>
              </li>
            ))}
          </ul>

          <!-- CTA -->
          <a
            href="#download"
            class={`block w-full text-center py-4 rounded-xl font-semibold transition-all duration-300 ${
              plan.popular
                ? 'bg-gradient-to-r from-ocean-blue to-deep-navy text-white hover:shadow-lg'
                : 'bg-gray-100 text-gray-900 hover:bg-gray-200'
            }`}
          >
            {plan.cta}
          </a>
        </div>
      ))}
    </div>

    <!-- Guarantee -->
    <div class="mt-16 text-center">
      <div class="inline-flex items-center gap-3 bg-forest-green/10 text-forest-green px-6 py-3 rounded-full">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
        </svg>
        <span class="font-semibold">7-day free trial for Pro. Cancel anytime. No questions asked.</span>
      </div>
    </div>
  </div>
</section>
