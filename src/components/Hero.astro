---
---

<section class="relative min-h-screen wave-bg overflow-hidden pt-16">
  <!-- Animated background elements -->
  <div class="absolute inset-0 overflow-hidden">
    <!-- Bubbles -->
    <div class="bubble absolute left-[10%] bottom-40 w-4 h-4 rounded-full bg-white/20"></div>
    <div class="bubble absolute left-[30%] bottom-60 w-6 h-6 rounded-full bg-white/15" style="animation-delay: 1s;"></div>
    <div class="bubble absolute left-[70%] bottom-32 w-3 h-3 rounded-full bg-white/25" style="animation-delay: 2s;"></div>
    <div class="bubble absolute left-[85%] bottom-48 w-5 h-5 rounded-full bg-white/20" style="animation-delay: 0.5s;"></div>
  </div>

  <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 pt-20 pb-32">
    <div class="grid lg:grid-cols-2 gap-12 items-center">
      <!-- Text Content -->
      <div class="text-center lg:text-left animate-fade-in">
        <div class="inline-flex items-center gap-2 px-4 py-2 bg-white/20 backdrop-blur-sm rounded-full text-white text-sm font-medium mb-6">
          <span class="w-2 h-2 bg-green-400 rounded-full animate-pulse"></span>
          Now available on the App Store
        </div>

        <h1 class="text-4xl sm:text-5xl lg:text-6xl font-extrabold text-white leading-tight mb-6">
          Your AI-Powered
          <span class="block text-fresh-teal">Fishing Companion</span>
        </h1>

        <p class="text-xl text-white/90 mb-8 max-w-xl mx-auto lg:mx-0">
          Log every catch with photos, GPS, and weather data. Instantly identify species with AI. Track your progress and discover insights to become a better angler.
        </p>

        <!-- Download Buttons -->
        <div class="flex flex-col sm:flex-row gap-4 justify-center lg:justify-start mb-8">
          <a
            href="#"
            class="inline-flex items-center justify-center gap-3 px-8 py-4 bg-white text-deep-navy font-semibold rounded-2xl shadow-xl hover:shadow-2xl transform hover:-translate-y-1 transition-all duration-300"
          >
            <svg class="w-8 h-8" fill="currentColor" viewBox="0 0 24 24">
              <path d="M18.71 19.5c-.83 1.24-1.71 2.45-3.05 2.47-1.34.03-1.77-.79-3.29-.79-1.53 0-2 .77-3.27.82-1.31.05-2.3-1.32-3.14-2.53C4.25 17 2.94 12.45 4.7 9.39c.87-1.52 2.43-2.48 4.12-2.51 1.28-.02 2.5.87 3.29.87.78 0 2.26-1.07 3.81-.91.65.03 2.47.26 3.64 1.98-.09.06-2.17 1.28-2.15 3.81.03 3.02 2.65 4.03 2.68 4.04-.03.07-.42 1.44-1.38 2.83M13 3.5c.73-.83 1.94-1.46 2.94-1.5.13 1.17-.34 2.35-1.04 3.19-.69.85-1.83 1.51-2.95 1.42-.15-1.15.41-2.35 1.05-3.11z"/>
            </svg>
            <div class="text-left">
              <div class="text-xs opacity-75">Download on the</div>
              <div class="text-lg font-bold">App Store</div>
            </div>
          </a>

          <a
            href="#notify"
            class="inline-flex items-center justify-center gap-3 px-8 py-4 bg-white/20 backdrop-blur-sm text-white font-semibold rounded-2xl border-2 border-white/30 hover:bg-white/30 transition-all duration-300"
          >
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9" />
            </svg>
            <span>Get Notified for Android</span>
          </a>
        </div>

        <!-- Social Proof -->
        <div class="flex items-center justify-center lg:justify-start gap-6">
          <div class="flex -space-x-3">
            <div class="w-10 h-10 rounded-full bg-gradient-to-br from-orange-400 to-red-500 border-2 border-white"></div>
            <div class="w-10 h-10 rounded-full bg-gradient-to-br from-blue-400 to-purple-500 border-2 border-white"></div>
            <div class="w-10 h-10 rounded-full bg-gradient-to-br from-green-400 to-teal-500 border-2 border-white"></div>
            <div class="w-10 h-10 rounded-full bg-gradient-to-br from-yellow-400 to-orange-500 border-2 border-white flex items-center justify-center text-white text-xs font-bold">+</div>
          </div>
          <div class="text-white">
            <div class="flex items-center gap-1">
              {[1, 2, 3, 4, 5].map(() => (
                <svg class="w-5 h-5 text-golden-yellow" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                </svg>
              ))}
            </div>
            <p class="text-sm opacity-90">4.8 stars from 1,250+ anglers</p>
          </div>
        </div>
      </div>

      <!-- Phone Mockup -->
      <div class="relative animate-float hidden lg:block">
        <div class="relative mx-auto w-72">
          <!-- Phone frame -->
          <div class="relative bg-gray-900 rounded-[3rem] p-3 shadow-2xl">
            <div class="absolute top-6 left-1/2 -translate-x-1/2 w-24 h-6 bg-gray-900 rounded-full"></div>
            <div class="bg-gradient-to-b from-fresh-teal via-ocean-blue to-deep-navy rounded-[2.5rem] overflow-hidden aspect-[9/19.5]">
              <!-- App screenshot placeholder -->
              <div class="h-full flex flex-col items-center justify-center text-white p-6">
                <svg class="w-20 h-20 mb-4 opacity-80" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-1 17.93c-3.95-.49-7-3.85-7-7.93 0-.62.08-1.21.21-1.79L9 15v1c0 1.1.9 2 2 2v1.93zm6.9-2.54c-.26-.81-1-1.39-1.9-1.39h-1v-3c0-.55-.45-1-1-1H8v-2h2c.55 0 1-.45 1-1V7h2c1.1 0 2-.9 2-2v-.41c2.93 1.19 5 4.06 5 7.41 0 2.08-.8 3.97-2.1 5.39z" />
                </svg>
                <p class="text-lg font-semibold text-center">AI Species ID</p>
                <p class="text-sm opacity-75 text-center">Snap a photo to identify</p>
              </div>
            </div>
          </div>

          <!-- Floating feature cards -->
          <div class="absolute -left-20 top-20 bg-white rounded-2xl shadow-xl p-4 animate-float" style="animation-delay: -2s;">
            <div class="flex items-center gap-3">
              <div class="w-12 h-12 rounded-xl bg-fresh-teal/20 flex items-center justify-center">
                <svg class="w-6 h-6 text-fresh-teal" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
              </div>
              <div>
                <p class="font-semibold text-gray-900">Species ID</p>
                <p class="text-sm text-gray-500">130+ species</p>
              </div>
            </div>
          </div>

          <div class="absolute -right-16 bottom-32 bg-white rounded-2xl shadow-xl p-4 animate-float" style="animation-delay: -1s;">
            <div class="flex items-center gap-3">
              <div class="w-12 h-12 rounded-xl bg-sunset-orange/20 flex items-center justify-center">
                <svg class="w-6 h-6 text-sunset-orange" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                </svg>
              </div>
              <div>
                <p class="font-semibold text-gray-900">GPS Tracking</p>
                <p class="text-sm text-gray-500">Auto location</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Wave decoration -->
  <div class="wave-decoration"></div>
</section>
