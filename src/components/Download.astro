<section id="download" class="py-24 bg-gray-50">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="bg-gradient-to-br from-deep-navy via-ocean-blue to-fresh-teal rounded-3xl p-8 md:p-16 text-center relative overflow-hidden">
      <!-- Background decorations -->
      <div class="absolute top-0 left-0 w-64 h-64 bg-white/10 rounded-full blur-3xl -translate-x-1/2 -translate-y-1/2"></div>
      <div class="absolute bottom-0 right-0 w-96 h-96 bg-fresh-teal/20 rounded-full blur-3xl translate-x-1/3 translate-y-1/3"></div>

      <div class="relative">
        <!-- Icon -->
        <div class="w-24 h-24 mx-auto mb-8 bg-white rounded-3xl shadow-2xl flex items-center justify-center">
          <div class="w-16 h-16 rounded-2xl bg-gradient-to-br from-fresh-teal to-deep-navy flex items-center justify-center">
            <svg class="w-10 h-10 text-white" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-1 17.93c-3.95-.49-7-3.85-7-7.93 0-.62.08-1.21.21-1.79L9 15v1c0 1.1.9 2 2 2v1.93zm6.9-2.54c-.26-.81-1-1.39-1.9-1.39h-1v-3c0-.55-.45-1-1-1H8v-2h2c.55 0 1-.45 1-1V7h2c1.1 0 2-.9 2-2v-.41c2.93 1.19 5 4.06 5 7.41 0 2.08-.8 3.97-2.1 5.39z" />
            </svg>
          </div>
        </div>

        <h2 class="text-4xl sm:text-5xl font-bold text-white mb-4">
          Ready to Fish Smarter?
        </h2>
        <p class="text-xl text-white/90 mb-10 max-w-2xl mx-auto">
          Download FishLog today and join thousands of anglers who are catching more, learning more, and enjoying every trip.
        </p>

        <!-- Download buttons -->
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a
            href="#"
            class="inline-flex items-center justify-center gap-3 px-10 py-5 bg-white text-deep-navy font-semibold rounded-2xl shadow-xl hover:shadow-2xl transform hover:-translate-y-1 transition-all duration-300"
          >
            <svg class="w-10 h-10" fill="currentColor" viewBox="0 0 24 24">
              <path d="M18.71 19.5c-.83 1.24-1.71 2.45-3.05 2.47-1.34.03-1.77-.79-3.29-.79-1.53 0-2 .77-3.27.82-1.31.05-2.3-1.32-3.14-2.53C4.25 17 2.94 12.45 4.7 9.39c.87-1.52 2.43-2.48 4.12-2.51 1.28-.02 2.5.87 3.29.87.78 0 2.26-1.07 3.81-.91.65.03 2.47.26 3.64 1.98-.09.06-2.17 1.28-2.15 3.81.03 3.02 2.65 4.03 2.68 4.04-.03.07-.42 1.44-1.38 2.83M13 3.5c.73-.83 1.94-1.46 2.94-1.5.13 1.17-.34 2.35-1.04 3.19-.69.85-1.83 1.51-2.95 1.42-.15-1.15.41-2.35 1.05-3.11z"/>
            </svg>
            <div class="text-left">
              <div class="text-sm opacity-75">Download on the</div>
              <div class="text-xl font-bold">App Store</div>
            </div>
          </a>

          <a
            href="#notify"
            class="inline-flex items-center justify-center gap-3 px-10 py-5 bg-white/20 backdrop-blur-sm text-white font-semibold rounded-2xl border-2 border-white/30 hover:bg-white/30 transition-all duration-300"
          >
            <svg class="w-10 h-10" fill="currentColor" viewBox="0 0 24 24">
              <path d="M17.523 15.3414c-.5511 0-.9993-.4486-.9993-.9997s.4483-.9993.9993-.9993c.5511 0 .9993.4483.9993.9993.0001.5511-.4482.9997-.9993.9997m-11.046 0c-.5511 0-.9993-.4486-.9993-.9997s.4483-.9993.9993-.9993c.5511 0 .9993.4483.9993.9993 0 .5511-.4483.9997-.9993.9997m11.4045-6.0204l1.9973-3.4592a.416.416 0 00-.1521-.5676.416.416 0 00-.5676.1521l-2.0223 3.503C15.5902 8.2439 13.8533 7.8508 12 7.8508s-3.5902.3931-5.1367 1.0989l-2.0223-3.503a.416.416 0 00-.5676-.1521.416.416 0 00-.1521.5676l1.9973 3.4592C2.6889 11.1867.3432 14.6589 0 18.761h24c-.3435-4.1021-2.6892-7.5743-6.1185-9.4404" />
            </svg>
            <div class="text-left">
              <div class="text-sm opacity-75">Coming Soon to</div>
              <div class="text-xl font-bold">Android</div>
            </div>
          </a>
        </div>

        <!-- QR Code -->
        <div class="mt-10 hidden md:block">
          <p class="text-white/70 text-sm mb-3">Or scan to download</p>
          <div class="inline-block bg-white p-4 rounded-xl">
            <div class="w-32 h-32 bg-gray-200 rounded-lg flex items-center justify-center text-gray-400 text-xs">
              QR Code
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
