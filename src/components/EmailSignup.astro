---

<section id="notify" class="py-24 wave-bg relative overflow-hidden">
  <!-- Background decorations -->
  <div class="absolute inset-0 overflow-hidden">
    <div class="bubble absolute left-[15%] bottom-20 w-6 h-6 rounded-full bg-white/10"></div>
    <div class="bubble absolute left-[45%] bottom-40 w-4 h-4 rounded-full bg-white/15" style="animation-delay: 1.5s;"></div>
    <div class="bubble absolute left-[75%] bottom-24 w-5 h-5 rounded-full bg-white/10" style="animation-delay: 0.8s;"></div>
  </div>

  <div class="relative max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
    <!-- Android notification -->
    <div class="inline-flex items-center gap-2 bg-white/20 backdrop-blur-sm px-4 py-2 rounded-full text-white text-sm font-medium mb-8">
      <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
        <path d="M17.523 15.3414c-.5511 0-.9993-.4486-.9993-.9997s.4483-.9993.9993-.9993c.5511 0 .9993.4483.9993.9993.0001.5511-.4482.9997-.9993.9997m-11.046 0c-.5511 0-.9993-.4486-.9993-.9997s.4483-.9993.9993-.9993c.5511 0 .9993.4483.9993.9993 0 .5511-.4483.9997-.9993.9997m11.4045-6.0204l1.9973-3.4592a.416.416 0 00-.1521-.5676.416.416 0 00-.5676.1521l-2.0223 3.503C15.5902 8.2439 13.8533 7.8508 12 7.8508s-3.5902.3931-5.1367 1.0989l-2.0223-3.503a.416.416 0 00-.5676-.1521.416.416 0 00-.1521.5676l1.9973 3.4592C2.6889 11.1867.3432 14.6589 0 18.761h24c-.3435-4.1021-2.6892-7.5743-6.1185-9.4404" />
      </svg>
      Android version coming soon!
    </div>

    <h2 class="text-4xl sm:text-5xl font-bold text-white mb-4">
      Be the First to Know
    </h2>
    <p class="text-xl text-white/90 mb-8 max-w-2xl mx-auto">
      Get notified when FishLog launches on Android. Plus, receive fishing tips and updates straight to your inbox.
    </p>

    <!-- Email Form -->
    <form id="email-form" class="max-w-md mx-auto">
      <div class="flex flex-col sm:flex-row gap-4">
        <input
          type="email"
          id="email-input"
          placeholder="Enter your email"
          required
          class="flex-1 px-6 py-4 rounded-xl text-gray-900 placeholder-gray-500 focus:outline-none focus:ring-4 focus:ring-white/30 transition-all"
        />
        <button
          type="submit"
          class="px-8 py-4 bg-deep-navy text-white font-semibold rounded-xl hover:bg-gray-900 transition-colors duration-300 whitespace-nowrap"
        >
          Notify Me
        </button>
      </div>

      <!-- Success message -->
      <div id="success-message" class="hidden mt-4 p-4 bg-forest-green/20 backdrop-blur-sm rounded-xl">
        <div class="flex items-center justify-center gap-2 text-white">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
          </svg>
          <span>You're on the list! We'll notify you when Android is ready.</span>
        </div>
      </div>

      <!-- Privacy note -->
      <p class="mt-4 text-sm text-white/70">
        We respect your privacy. Unsubscribe anytime.
        <a href="/privacy" class="underline hover:text-white">Privacy Policy</a>
      </p>
    </form>

    <!-- Privacy promises -->
    <div class="mt-12 flex flex-col sm:flex-row items-center justify-center gap-6 text-white/80">
      <div class="flex items-center gap-2">
        <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
          <path d="M2.003 5.884L10 9.882l7.997-3.998A2 2 0 0016 4H4a2 2 0 00-1.997 1.884z" />
          <path d="M18 8.118l-8 4-8-4V14a2 2 0 002 2h12a2 2 0 002-2V8.118z" />
        </svg>
        <span>Updates only</span>
      </div>
      <div class="hidden sm:block w-1 h-1 bg-white/50 rounded-full"></div>
      <div class="flex items-center gap-2">
        <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M5 9V7a5 5 0 0110 0v2a2 2 0 012 2v5a2 2 0 01-2 2H5a2 2 0 01-2-2v-5a2 2 0 012-2zm8-2v2H7V7a3 3 0 016 0z" clip-rule="evenodd" />
        </svg>
        <span>No spam, ever</span>
      </div>
      <div class="hidden sm:block w-1 h-1 bg-white/50 rounded-full"></div>
      <div class="flex items-center gap-2">
        <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
        </svg>
        <span>Unsubscribe anytime</span>
      </div>
    </div>
  </div>
</section>

<script>
  const form = document.getElementById('email-form');
  const emailInput = document.getElementById('email-input') as HTMLInputElement;
  const successMessage = document.getElementById('success-message');

  form?.addEventListener('submit', async (e) => {
    e.preventDefault();

    const email = emailInput?.value;

    // Here you would typically send to your email service
    // For now, we'll simulate success
    console.log('Email submitted:', email);

    // Show success message
    successMessage?.classList.remove('hidden');
    if (emailInput) emailInput.value = '';

    // Hide after 5 seconds
    setTimeout(() => {
      successMessage?.classList.add('hidden');
    }, 5000);
  });
</script>
