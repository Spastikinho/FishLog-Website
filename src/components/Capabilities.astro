---
// Real features based on the actual FishLog codebase
const capabilities = [
  {
    icon: `<svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
    </svg>`,
    title: "On-Device AI Processing",
    description: "Species identification runs entirely on your device using Core ML. No internet required, your photos stay private."
  },
  {
    icon: `<svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 7v10c0 2.21 3.582 4 8 4s8-1.79 8-4V7M4 7c0 2.21 3.582 4 8 4s8-1.79 8-4M4 7c0-2.21 3.582-4 8-4s8 1.79 8 4" />
    </svg>`,
    title: "130+ Species Database",
    description: "Comprehensive fish species database with length-weight curves for accurate weight estimation from measurements."
  },
  {
    icon: `<svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h18M7 15h1m4 0h1m-7 4h12a3 3 0 003-3V8a3 3 0 00-3-3H6a3 3 0 00-3 3v8a3 3 0 003 3z" />
    </svg>`,
    title: "Credit Card Reference Measurement",
    description: "Use any standard credit card as a size reference. Our algorithm detects it and calculates fish length automatically."
  },
  {
    icon: `<svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21a4 4 0 01-4-4V5a2 2 0 012-2h4a2 2 0 012 2v12a4 4 0 01-4 4zm0 0h12a2 2 0 002-2v-4a2 2 0 00-2-2h-2.343M11 7.343l1.657-1.657a2 2 0 012.828 0l2.829 2.829a2 2 0 010 2.828l-8.486 8.485M7 17h.01" />
    </svg>`,
    title: "Lure Classification",
    description: "AI-powered lure detection identifies type, color, and pattern. Track which lures work best for each species."
  }
];

// Real app features from the codebase
const appFeatures = [
  "SwiftData local persistence",
  "iCloud sync support",
  "Weather data capture",
  "GPS location tracking",
  "Photo management",
  "Trip organization",
  "Personal tackle box",
  "Achievement badges"
];
---

<section id="capabilities" class="py-24 bg-gradient-to-b from-gray-50 to-white">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Section Header -->
    <div class="text-center mb-16">
      <span class="inline-block px-4 py-2 bg-ocean-blue/10 text-ocean-blue font-semibold rounded-full text-sm mb-4">
        Built-In Capabilities
      </span>
      <h2 class="text-4xl sm:text-5xl font-bold text-gray-900 mb-4">
        Powered by <span class="gradient-text">Advanced Technology</span>
      </h2>
      <p class="text-xl text-gray-600 max-w-2xl mx-auto">
        FishLog combines on-device machine learning with a comprehensive species database to deliver accurate results without compromising your privacy.
      </p>
    </div>

    <!-- Capabilities Grid -->
    <div class="grid md:grid-cols-2 gap-8 mb-16">
      {capabilities.map((capability) => (
        <div class="bg-white rounded-3xl p-8 shadow-lg hover:shadow-xl transition-shadow duration-300">
          <div class="w-16 h-16 rounded-2xl bg-gradient-to-br from-ocean-blue to-deep-navy flex items-center justify-center text-white mb-6">
            <Fragment set:html={capability.icon} />
          </div>
          <h3 class="text-xl font-bold text-gray-900 mb-3">{capability.title}</h3>
          <p class="text-gray-600 leading-relaxed">{capability.description}</p>
        </div>
      ))}
    </div>

    <!-- App Features List -->
    <div class="bg-gradient-to-br from-deep-navy to-ocean-blue rounded-3xl p-8 md:p-12">
      <h3 class="text-2xl font-bold text-white text-center mb-8">Additional Features</h3>
      <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
        {appFeatures.map((feature) => (
          <div class="flex items-center gap-3 text-white">
            <svg class="w-5 h-5 text-fresh-teal flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
            </svg>
            <span class="text-sm">{feature}</span>
          </div>
        ))}
      </div>
    </div>
  </div>
</section>
